<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.SingletonEhCacheProvider</property>
		<property name="hibernate.cache.use_second_level_cache">true</property>
	
		<mapping class="ru.taxiservice.taxi.domain.User" />
		<mapping class="ru.taxiservice.taxi.domain.Role" />
		<mapping class="ru.taxiservice.taxi.domain.City" />
		<mapping class="ru.taxiservice.taxi.domain.Service" />
		<mapping class="ru.taxiservice.taxi.domain.Address" />
		<mapping class="ru.taxiservice.taxi.domain.Street" />
		<mapping class="ru.taxiservice.taxi.domain.Place" />
		<mapping class="ru.taxiservice.taxi.domain.Distribution" />
	</session-factory>
</hibernate-configuration>